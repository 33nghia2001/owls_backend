# Django Settings
DJANGO_SECRET_KEY=your-secret-key-here
DJANGO_DEBUG=True
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1

# Admin Panel IP Whitelist (comma-separated IPs allowed to access admin)
# Example: ADMIN_IP_WHITELIST=127.0.0.1,192.168.1.100
# Leave empty to allow all IPs in DEBUG mode, but MUST set in production
ADMIN_IP_WHITELIST=

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/dbname
# DATABASE_URL=sqlite:///db.sqlite3  # For local development

# Cloudinary Storage (Optional)
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=

# VNPay Payment Gateway
VNPAY_TMN_CODE=your-vnpay-tmn-code
VNPAY_HASH_SECRET=your-vnpay-hash-secret
VNPAY_PAYMENT_URL=https://sandbox.vnpayment.vn/paymentv2/vpcpay.html
VNPAY_RETURN_URL=http://localhost:8000/api/payments/vnpay/callback
VNPAY_API_URL=https://sandbox.vnpayment.vn/merchant_webapi/api/transaction

# Frontend URL (for redirects)
FRONTEND_URL=http://localhost:3000

# Redis (Caching + Celery Message Broker)
REDIS_URL=redis://localhost:6379/0

# Email Configuration
DEFAULT_FROM_EMAIL=noreply@yourdomain.com
# For development, use console backend (prints to terminal)
# EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
# For production, configure SMTP:
# EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=your-email@gmail.com
# EMAIL_HOST_PASSWORD=your-app-password

# Google OAuth (Get from: https://console.cloud.google.com/)
GOOGLE_OAUTH2_KEY=your-google-client-id.apps.googleusercontent.com
GOOGLE_OAUTH2_SECRET=your-google-client-secret

# Cloudflare Turnstile CAPTCHA
# Get your keys from: https://dash.cloudflare.com/
TURNSTILE_SITEKEY=your-turnstile-sitekey
TURNSTILE_SECRET=your-turnstile-secret
TURNSTILE_TEST_MODE=True  # Set False in production
